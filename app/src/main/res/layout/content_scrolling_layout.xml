<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ir.paad.audiobook.fragments.ProfileFragment"
    tools:showIn="@layout/fragment_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="beh rah"
            android:textColor="@color/b"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_email_pf"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_back" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_email_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_email_title"
                android:layout_toRightOf="@+id/iv_email_pf"
                android:maxLines="1"
                android:padding="10dp"
                android:text="behrah136641@gmail.com"
                android:textColor="@color/blue2"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:fontFamily="@font/yekan"
                android:id="@+id/tv_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="ایمیل"
                android:textColor="@color/title1"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b"/>

        <RelativeLayout

            android:id="@+id/rl_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_tel_pf"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_back" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_tel_val"
                android:fontFamily="@font/yekan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_tel_title"
                android:layout_toRightOf="@+id/iv_tel_pf"
                android:maxLines="1"
                android:padding="10dp"
                android:text="09180143382"
                android:textColor="@color/blue2"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_tel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:fontFamily="@font/yekan"
                android:text="شماره تلفن"
                android:textColor="@color/title1"
                android:textSize="15sp" />

        </RelativeLayout>
        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b"/>

        <RelativeLayout

            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_password_pf"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_back" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_password_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yekan"
                android:layout_toLeftOf="@+id/tv_password_title"
                android:layout_toRightOf="@+id/iv_password_pf"
                android:maxLines="1"
                android:padding="10dp"
                android:text="**********"
                android:textColor="@color/blue2"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:fontFamily="@font/yekan"
                android:text="تغییر رمز عبور"
                android:textColor="@color/title1"
                android:textSize="15sp" />

        </RelativeLayout>
        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b"/>
        <RelativeLayout
            android:id="@+id/rl_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_wallet_pf"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/ic_back" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_wallet_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_wallet_title"
                android:layout_toRightOf="@+id/iv_wallet_pf"
                android:gravity="left"
                android:maxLines="1"
                android:padding="10dp"
                android:fontFamily="@font/yekan"
                android:text="0 تومان"
                android:textColor="@color/blue2"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_wallet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:fontFamily="@font/yekan"
                android:text="کیف پول"
                android:textColor="@color/title1"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/acb_logout"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/iransans_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="خروج از حساب"
            android:background="@color/white"
            android:textColor="@color/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>