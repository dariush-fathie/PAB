    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_customTabContainer"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_gravity="center"
    app:cardCornerRadius="15dp">

    <android.support.v7.widget.AppCompatTextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tv_customTabTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="جدیدترین"
        android:textColor="@color/title2"
