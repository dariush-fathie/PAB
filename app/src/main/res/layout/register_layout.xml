<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="30dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edittext_states"
                    android:fontFamily="@font/yekan"
                    android:hint="ایمیل یا شماره تلفن"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/et_pass"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edittext_states"
                    android:fontFamily="@font/yekan"
                    android:hint="رمز عبور"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/et_alias"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_alias"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edittext_states"
                    android:fontFamily="@font/yekan"
                    android:hint="اسم مستعار"
                    android:imeOptions="actionDone"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="18sp" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/act_register_alert"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_tag"
                    android:fontFamily="@font/yekan"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="ثبت نام"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>



</RelativeLayout>


