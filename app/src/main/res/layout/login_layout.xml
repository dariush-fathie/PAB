<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="30dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edittext_states"
                    android:fontFamily="@font/yekan"
                    android:hint="ایمیل یا شماره تلفن"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_edittext_states"
                    android:fontFamily="@font/yekan"
                    android:hint="رمز عبور"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintTextColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/act_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_tag"
                    android:fontFamily="@font/yekan"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="ورود"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/act_login_wg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@color/white"
                    android:fontFamily="@font/iransans_bold"
                    android:text="ورود با حساب گوگل "
                    android:textColor="@color/b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/act_recovery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/yekan"
                        android:gravity="center"
                        android:text="بازیابی رمز عبور"
                        android:textColor="@color/b" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/act_register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/iransans_bold"
                        android:gravity="center"
                        android:text="ثبت نام"
                        android:textColor="@color/b"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/act_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/iransans_bold"
        android:text="ورود / ثبت نام"
        android:textColor="@color/b"
        android:textSize="17sp" />

</RelativeLayout>

